<h1>My tasks</h1>

  <% @tasks.each do |task| %>
  <div class="d-flex justify-content-between w-50">
    <div>
      <input type="checkbox" <%= "checked" if task.completed %>>
      <%= link_to task.title, task_path(task) %>
    </div>

  <div>
    <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can ps-2"></i>
  </div>
  </div>

        <% end %>
    <br>

  <% end %>

<%= link_to tasks_new_path do %>
  <button type="button" class="btn btn-outline-primary"><i class="fa-solid fa-circle-plus"></i> Create a new task</button>
<% end %>
